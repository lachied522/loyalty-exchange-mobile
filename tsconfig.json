{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "baseUrl": ".",
    "paths": {
      "~/*": ["*"],
      "@/context/*": ["app/context/*"],
      "@/constants/*": ["app/constants/*"],
      "@/types/*": ["app/types/*"],
      "@/utils/*": ["app/utils/*"],
      "@/lib/*": ["app/lib/*"],
    }
  },
  "include": ["**/*.ts", "**/*.tsx", ".expo/types/**/*.ts", "expo-env.d.ts", "index.js"]
}
