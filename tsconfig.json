{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "baseUrl": ".",
    "paths": {
      "~/*": ["*"],
      "@/context/*": ["context/*"],
      "@/constants/*": ["constants/*"],
      "@/types/*": ["types/*"],
      "@/utils/*": ["utils/*"],
      "@/lib/*": ["lib/*"],
    }
  },
  "include": ["**/*.ts", "**/*.tsx", ".expo/types/**/*.ts", "expo-env.d.ts"]
}
